<h2>Lista de produtos: </h2>
<hr />

{{#each produtos}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Preçoo: R$ {{preçoFormatado}}</small><br />
      <small>Categoria: {{categoria}}</small><br />
        <button id="editProduto{{id}}" class="btn btn-success mt-2">Atualizar
          produto</button>
        {{>_editProduto}}
        <script>
        document.getElementById('editProduto{{id}}').addEventListener('click', function(){
          var pesquisa = document.getElementById('card_edit{{id}}');
          if (pesquisa.style.display === 'none') {
            pesquisa.style.display = 'block';
          } else {
            pesquisa.style.display = 'none';
          }});
      </script>
      <form action="/api/produtos/{{id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE"/>
        <button type="submit" class="btn btn-danger mt-2">Deletar produto</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-3">Nenhum produto registrado</h4>
{{/each}}